  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    :root {
      --primary: #00d8ff;
      --secondary: #008cff;
      --tertiary: #a100ff;
      --dark-bg: #000000; /* Changed to pure black */
      --darker-bg: #000000; /* Changed to pure black */
      --text-primary: #f8fafc;
      --text-secondary: rgba(248, 250, 252, 0.7);
      --gold-accent: #ffd700;
      --platinum: #e5e4e2;
      --glass-border: rgba(255, 255, 255, 0.1);
      --section-spacing: 8rem;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Montserrat', sans-serif;
      background-color: var(--dark-bg);
      color: var(--text-primary);
      min-height: 100vh;
      overflow-x: hidden;
      line-height: 1.6;
    }

    /* Luxury Background with Subtle Animation */
    .luxury-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -2;
      background: 
        radial-gradient(circle at 20% 30%, rgba(0, 216, 255, 0.03) 0%, transparent 25%),
        radial-gradient(circle at 80% 70%, rgba(161, 0, 255, 0.03) 0%, transparent 25%),
        linear-gradient(to bottom, var(--darker-bg), var(--dark-bg));
      animation: bgPulse 20s infinite alternate;
    }

    @keyframes bgPulse {
      0% { opacity: 1; }
      50% { opacity: 0.95; }
      100% { opacity: 1; }
    }

    /* Floating Gradient Particles */
    .gradient-particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      pointer-events: none;
      overflow: hidden;
    }

    .gradient-particle {
      position: absolute;
      width: 2px;
      height: 2px;
      border-radius: 50%;
      opacity: 0;
      animation: float 15s linear infinite;
    }

    @keyframes float {
      0% { 
        transform: translateY(0) translateX(0);
        opacity: 0;
      }
      10% { opacity: 0.7; }
      90% { opacity: 0.7; }
      100% { 
        transform: translateY(-100vh) translateX(100px);
        opacity: 0;
      }
    }

    /* Premium Container */
    .premium-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      position: relative;
    }

    /* Elegant Back Button */
    .back-btn {
      position: absolute;
      top: 3rem;
      left: 2rem;
      display: flex;
      align-items: center;
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9rem;
      letter-spacing: 1px;
      text-transform: uppercase;
      transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      z-index: 10;
    }

    .back-btn:hover {
      color: var(--primary);
      transform: translateX(-5px);
    }

    .back-btn svg {
      margin-right: 8px;
      transition: transform 0.3s ease;
    }

    .back-btn:hover svg {
      transform: translateX(-3px);
    }

    /* Premium Hero Section */
    .premium-hero {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 6rem 0;
      position: relative;
    }

    .premium-hero h1 {
      font-family: 'Playfair Display', serif;
      font-size: 5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary), var(--tertiary));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      letter-spacing: -1px;
      line-height: 1.1;
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 1s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
    }

    .premium-hero p {
      font-size: 1.2rem;
      max-width: 700px;
      margin: 0 auto 3rem;
      color: var(--text-secondary);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 1s cubic-bezier(0.165, 0.84, 0.44, 1) forwards;
      animation-delay: 0.3s;
    }

    /* Founder Section - Luxury Card */
    .founder-section {
      padding: var(--section-spacing) 0;
      position: relative;
    }

    .founder-card {
      max-width: 800px;
      margin: 0 auto;
      background: rgba(10, 10, 10, 0.5); /* Darker semi-transparent background */
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border-radius: 16px;
      border: 1px solid var(--glass-border);
      box-shadow: 
        0 20px 50px rgba(0, 0, 0, 0.5),
        inset 0 0 20px rgba(0, 216, 255, 0.1);
      padding: 3rem;
      text-align: center;
      position: relative;
      overflow: hidden;
      opacity: 0;
      transform: translateY(50px);
      transition: all 1s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .founder-card.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .founder-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        135deg, 
        rgba(0, 216, 255, 0.05) 0%, 
        rgba(161, 0, 255, 0.05) 100%
      );
      z-index: -1;
    }

    .founder-card::after {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(
        135deg, 
        var(--primary), 
        var(--secondary), 
        var(--tertiary)
      );
      z-index: -2;
      border-radius: 18px;
      opacity: 0.3;
      transition: opacity 0.5s ease;
    }

    .founder-img-container {
      width: 180px;
      height: 180px;
      margin: 0 auto 2rem;
      position: relative;
    }

    .founder-img {
      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid rgba(0, 216, 255, 0.5);
      box-shadow: 
        0 0 30px rgba(0, 216, 255, 0.3),
        inset 0 0 20px rgba(0, 216, 255, 0.2);
      transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .founder-img:hover {
      transform: scale(1.05);
      box-shadow: 
        0 0 40px rgba(0, 216, 255, 0.5),
        inset 0 0 30px rgba(0, 216, 255, 0.3);
    }

    .founder-img-container::before {
      content: '';
      position: absolute;
      top: -5px;
      left: -5px;
      right: -5px;
      bottom: -5px;
      border: 1px solid var(--primary);
      border-radius: 50%;
      animation: rotate 10s linear infinite;
      opacity: 0.5;
    }

    @keyframes rotate {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .founder-name {
      font-family: 'Playfair Display', serif;
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary), var(--tertiary));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    .founder-title {
      color: var(--primary);
      font-weight: 500;
      margin-bottom: 1.5rem;
      letter-spacing: 1px;
    }

    .founder-bio {
      color: var(--text-secondary);
      margin-bottom: 2.5rem;
      line-height: 1.8;
      font-size: 1.1rem;
    }

    /* Gradient Social Links */
    .social-links {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      flex-wrap: wrap;
    }

    .social-link {
      display: flex;
      align-items: center;
      color: var(--text-primary);
      text-decoration: none;
      padding: 0.8rem 1.5rem;
      border-radius: 50px;
      transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(0, 216, 255, 0.3);
      background: rgba(0, 216, 255, 0.1);
      backdrop-filter: blur(5px);
      -webkit-backdrop-filter: blur(5px);
    }

    .social-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        135deg, 
        var(--primary), 
        var(--secondary), 
        var(--tertiary)
      );
      z-index: -1;
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .social-link:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
      color: white;
      border-color: transparent;
    }

    .social-link:hover::before {
      opacity: 0.7;
    }

    .social-link svg {
      margin-right: 10px;
      transition: transform 0.3s ease;
    }

    .social-link:hover svg {
      transform: scale(1.2);
    }

    /* Mission Section */
    .mission-section {
      padding: var(--section-spacing) 0;
      text-align: center;
      position: relative;
    }

    .mission-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 200px;
      height: 1px;
      background: linear-gradient(
        to right, 
        transparent, 
        var(--primary), 
        transparent
      );
    }

    .mission-title {
      font-family: 'Playfair Display', serif;
