        }
      });
    });

    document.querySelectorAll('.reject-request').forEach(btn => {
      btn.addEventListener('click', async function() {
        const userId = this.getAttribute('data-user-id');
        
        try {
          const response = await fetch(`/users/${userId}/reject-follow`, {
            method: 'POST',
            headers: {
