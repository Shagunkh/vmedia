<script>
  // Generate animated background dots
  function createDots() {
    const container = document.getElementById('dots-container');
    for (let i = 0; i < 20; i++) {
      const dot = document.createElement('div');
      dot.classList.add('dot');
      dot.style.width = `${Math.random() * 8 + 2}px`;
      dot.style.height = dot.style.width;
      dot.style.left = `${Math.random() * 100}%`;
      dot.style.top = `${Math.random() * 100}%`;
      dot.style.animationDelay = `${Math.random() * 5}s`;
      dot.style.animationDuration = `${Math.random() * 20 + 10}s`;
      container.appendChild(dot);
    }
  }

  document.addEventListener('DOMContentLoaded', function() {
    createDots();
    
    // Add input focus effects
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach(input => {
      input.addEventListener('focus', function() {
        this.parentNode.querySelector('.form-label').style.color = 'var(--accent)';
        this.parentNode.querySelector('.form-label').style.transform = 'translateY(-20px) scale(0.9)';
      });
      
      input.addEventListener('blur', function() {
        if (this.value === '') {
          this.parentNode.querySelector('.form-label').style.color = 'var(--text-muted)';
          this.parentNode.querySelector('.form-label').style.transform = '';
        }
      });
      
      // Initialize labels if input has value
      if (input.value !== '') {
        input.parentNode.querySelector('.form-label').style.transform = 'translateY(-20px) scale(0.9)';
        input.parentNode.querySelector('.form-label').style.opacity = '0.8';
      }
    });
    
    // Login button loading state
    const loginBtn = document.getElementById('login');
    loginBtn.addEventListener('click', function(e) {
      this.querySelector('.login-text').classList.add('d-none');
      this.querySelector('.spinner-border').classList.remove('d-none');
      this.disabled = true;
      
      // Simulate loading (remove in production)
      setTimeout(() => {
        this.querySelector('.login-text').classList.remove('d-none');
        this.querySelector('.spinner-border').classList.add('d-none');
        this.disabled = false;
      }, 2000);
    });
  });
</script>
