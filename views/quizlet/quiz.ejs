<% layout('/layouts/boilerplate') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quizlet</title>
     <style>
        /* Cosmic Design System */
        :root {
            --cosmic-primary: linear-gradient(90deg, #00d8ff, #008cff);
            --cosmic-primary-reverse: linear-gradient(90deg, #008cff, #00d8ff);
            --cosmic-light: #00d8ff;
            --cosmic-dark: #008cff;
            --cosmic-black: #0a0a12;
            --cosmic-dark-bg: #12121a;
            --cosmic-card: #000000;
            --cosmic-text: #f0f4ff;
            --cosmic-text-dim: #b0b8cc;
            --cosmic-success: #4cffb0;
            --cosmic-error: #ff4c6a;
            --transition-snap: cubic-bezier(0.8, 0, 0.2, 1);
            --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
            --transition-bounce: cubic-bezier(0.7, -0.4, 0.4, 1.4);
        }

        /* Cosmic Animations */
        @keyframes cosmicPulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.05); opacity: 0.8; }
        }

        @keyframes cosmicFloat {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        @keyframes cosmicGradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        @keyframes cosmicFadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes cosmicRipple {
            to { transform: scale(4); opacity: 0; }
        }

        @keyframes cosmicSpin {
            to { transform: rotate(360deg); }
        }

        @keyframes cosmicConfetti {
            0% { transform: translateY(-100px) rotate(0deg); opacity: 1; }
            100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
        }

        /* Base Styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: var(--cosmic-black);
            color: var(--cosmic-text);
            min-height: 100vh;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Cosmic Header */
        .cosmic-header {
            background: var(--cosmic-primary);
            background-size: 200% 200%;
            animation: cosmicGradient 8s ease infinite;
            color: white;
            text-align: center;
            padding: 5rem 2rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        .cosmic-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 75% 25%, rgba(255,255,255,0.15) 0%, transparent 70%);
            pointer-events: none;
        }

        .cosmic-title {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 1rem;
            background: linear-gradient(to right, #ffffff, #e0f7fa);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            animation: cosmicFadeIn 1s var(--transition-smooth) both;
        }

        .cosmic-tagline {
            font-size: 1.5rem;
            font-weight: 300;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto 2rem;
            animation: cosmicFadeIn 1s var(--transition-smooth) 0.2s both;
        }

        /* Subject Cards - 3D Hover Effect */
        .cosmic-subjects {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 3rem;
            max-width: 1400px;
            margin: 0 auto;
            perspective: 2000px;
        }

        .cosmic-card {
            background: var(--cosmic-card);
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            transition: all 0.6s var(--transition-snap);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transform-style: preserve-3d;
            animation: cosmicFadeIn 0.8s var(--transition-smooth) both;
        }

        .cosmic-card:nth-child(1) { animation-delay: 0.1s; }
        .cosmic-card:nth-child(2) { animation-delay: 0.2s; }

        .cosmic-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: var(--cosmic-primary);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.6s var(--transition-snap);
        }

        .cosmic-card:hover {
            transform: translateY(-10px) rotateX(5deg) rotateY(2deg);
            box-shadow: 0 20px 50px rgba(0, 140, 255, 0.3);
        }

        .cosmic-card:hover::before {
            transform: scaleX(1);
        }

        .cosmic-card-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
            display: inline-block;
        }

        .cosmic-card-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 50px;
            height: 3px;
            background: var(--cosmic-primary);
            transition: all 0.6s var(--transition-snap);
        }

        .cosmic-card:hover .cosmic-card-title::after {
            width: 100px;
        }

        .cosmic-card-desc {
            color: var(--cosmic-text-dim);
            transition: color 0.4s var(--transition-smooth);
        }

        .cosmic-card:hover .cosmic-card-desc {
            color: var(--cosmic-text);
        }

        /* Modal - Floating Glass Effect */
        .cosmic-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            z-index: 1000;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.6s var(--transition-smooth);
        }

        .cosmic-modal.show {
            display: flex;
            animation: cosmicFadeIn 0.6s var(--transition-smooth) forwards;
        }

        .cosmic-modal-content {
            background: rgba(26, 26, 36, 0.8);
            border-radius: 20px;
            width: 90%;
            max-width: 900px;
            max-height: 90vh;
            overflow-y: auto;
            padding: 3rem;
            position: relative;
            transform: scale(0.95) translateY(20px);
            transition: all 0.6s var(--transition-smooth);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(0, 216, 255, 0.1);
        }

        .cosmic-modal.show .cosmic-modal-content {
            transform: scale(1) translateY(0);
        }

        .cosmic-modal-title {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .cosmic-modal-subtitle {
            color: var(--cosmic-text-dim);
            margin-bottom: 2rem;
        }

        .cosmic-close-btn {
            position: absolute;
            top: 1.5rem;
            right: 1.5rem;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(0, 216, 255, 0.1);
            color: var(--cosmic-text);
            font-size: 1.5rem;
            cursor: pointer;
            transition: all 0.4s var(--transition-smooth);
        }

        .cosmic-close-btn:hover {
            background: rgba(0, 216, 255, 0.2);
            transform: rotate(90deg);
            color: var(--cosmic-light);
        }

        /* Quiz Options - Ripple Effect */
        .cosmic-options-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .cosmic-option {
            background: rgba(0, 216, 255, 0.05);
            border: 1px solid rgba(0, 216, 255, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.4s var(--transition-smooth);
            position: relative;
            overflow: hidden;
            color: var(--cosmic-text);
        }

        .cosmic-option:hover {
            background: rgba(0, 216, 255, 0.1);
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 216, 255, 0.1);
            border-color: rgba(0, 216, 255, 0.4);
        }

        .cosmic-option:active {
            transform: translateY(-2px);
        }

        .cosmic-option::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 5px;
            height: 5px;
            background: rgba(255, 255, 255, 0.3);
            opacity: 0;
            border-radius: 100%;
            transform: scale(1, 1) translate(-50%, -50%);
            transform-origin: 50% 50%;
        }

        .cosmic-option:focus:not(:active)::after {
            animation: cosmicRipple 0.6s var(--transition-smooth);
        }

        .cosmic-full-option {
            grid-column: 1 / -1;
            background: var(--cosmic-primary);
            color: white;
            font-weight: 600;
            padding: 1.8rem;
            animation: cosmicPulse 3s infinite;
        }

        .cosmic-full-option:hover {
            animation: none;
            background: var(--cosmic-primary-reverse);
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 140, 255, 0.3);
        }

        /* Quiz Screen - Immersive Experience */
        .cosmic-quiz-screen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--cosmic-dark-bg);
            z-index: 1001;
            overflow-y: auto;
            opacity: 0;
            transition: opacity 0.6s var(--transition-smooth);
        }

        .cosmic-quiz-screen.show {
            display: block;
            animation: cosmicFadeIn 0.6s var(--transition-smooth) forwards;
        }

        .cosmic-quiz-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem 2rem;
            background: var(--cosmic-card);
            position: sticky;
            top: 0;
            z-index: 10;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            border-bottom: 1px solid rgba(0, 216, 255, 0.1);
        }

        .cosmic-quiz-title {
            font-size: 1.5rem;
            font-weight: 600;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .cosmic-timer {
            font-size: 1.3rem;
            font-weight: 700;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            animation: cosmicPulse 2s infinite;
        }

        .cosmic-question-container {
            padding: 3rem 2rem;
            max-width: 800px;
            margin: 0 auto;
            animation: cosmicFadeIn 0.8s var(--transition-smooth);
        }

        .cosmic-question {
            font-size: 1.5rem;
            margin-bottom: 2.5rem;
            line-height: 1.7;
            color: var(--cosmic-text);
            background: rgba(0, 216, 255, 0.05);
            padding: 1.5rem;
            border-radius: 12px;
            border-left: 4px solid var(--cosmic-light);
        }

        .cosmic-options {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .cosmic-option-item {
            padding: 1.3rem 1.5rem;
            border: 1px solid rgba(0, 216, 255, 0.1);
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.4s var(--transition-smooth);
            background: rgba(0, 216, 255, 0.03);
            position: relative;
            overflow: hidden;
            animation: cosmicFadeIn 0.6s var(--transition-smooth) both;
        }

        .cosmic-option-item:nth-child(1) { animation-delay: 0.1s; }
        .cosmic-option-item:nth-child(2) { animation-delay: 0.2s; }
        .cosmic-option-item:nth-child(3) { animation-delay: 0.3s; }
        .cosmic-option-item:nth-child(4) { animation-delay: 0.4s; }

        .cosmic-option-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--cosmic-light);
            transform: scaleY(0);
            transform-origin: top;
            transition: transform 0.4s var(--transition-smooth);
        }

        .cosmic-option-item:hover {
            background: rgba(0, 216, 255, 0.1);
            border-color: rgba(0, 216, 255, 0.3);
            transform: translateX(10px);
        }

        .cosmic-option-item.selected {
            background: rgba(0, 216, 255, 0.15);
            border-color: var(--cosmic-light);
            transform: translateX(10px);
        }

        .cosmic-option-item.selected::before {
            transform: scaleY(1);
        }

        .cosmic-option-item.correct {
            background: rgba(76, 255, 176, 0.1);
            border-color: var(--cosmic-success);
        }

        .cosmic-option-item.correct::before {
            background: var(--cosmic-success);
        }

        .cosmic-option-item.incorrect {
            background: rgba(255, 76, 106, 0.1);
            border-color: var(--cosmic-error);
        }

        .cosmic-option-item.incorrect::before {
            background: var(--cosmic-error);
        }

        .cosmic-navigation {
            display: flex;
            justify-content: space-between;
            margin-top: 3rem;
            padding: 1.5rem 0;
            border-top: 1px solid rgba(0, 216, 255, 0.1);
        }

        .cosmic-btn {
            padding: 1rem 2rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.4s var(--transition-smooth);
            position: relative;
            overflow: hidden;
            font-size: 1rem;
            min-width: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cosmic-btn-primary {
            background: var(--cosmic-primary);
            color: white;
            box-shadow: 0 4px 15px rgba(0, 140, 255, 0.3);
        }

        .cosmic-btn-primary:hover {
            background: var(--cosmic-primary-reverse);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 140, 255, 0.4);
        }

        .cosmic-btn-primary:active {
            transform: translateY(0);
        }

        .cosmic-btn-secondary {
            background: rgba(0, 216, 255, 0.1);
            color: var(--cosmic-light);
            border: 1px solid rgba(0, 216, 255, 0.3);
        }

        .cosmic-btn-secondary:hover {
            background: rgba(0, 216, 255, 0.2);
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0, 216, 255, 0.2);
        }

        .cosmic-btn-secondary:active {
            transform: translateY(0);
        }

        .cosmic-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
            box-shadow: none !important;
        }

        /* Results Screen - Celebration Effect */
        .cosmic-results-screen {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--cosmic-dark-bg);
            z-index: 1002;
            overflow-y: auto;
            padding: 2rem;
            text-align: center;
            opacity: 0;
            transition: opacity 0.6s var(--transition-smooth);
        }

        .cosmic-results-screen.show {
            display: block;
            animation: cosmicFadeIn 0.6s var(--transition-smooth) forwards;
        }

        .cosmic-results-container {
            max-width: 800px;
            margin: 0 auto;
            background: var(--cosmic-card);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(0, 216, 255, 0.1);
            position: relative;
            overflow: hidden;
            animation: cosmicFloat 6s ease-in-out infinite;
        }

        .cosmic-results-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(0, 216, 255, 0.05) 0%, transparent 70%);
            pointer-events: none;
        }

        .cosmic-results-title {
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .cosmic-score {
            font-size: 3rem;
            margin: 1.5rem 0;
            font-weight: 800;
            background: var(--cosmic-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            position: relative;
            display: inline-block;
        }

        .cosmic-score::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--cosmic-primary);
            border-radius: 2px;
        }

        .cosmic-review {
            margin-top: 3rem;
            text-align: left;
        }

        .cosmic-review-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: var(--cosmic-text);
            border-bottom: 1px solid rgba(0, 216, 255, 0.1);
            padding-bottom: 0.8rem;
        }

        .cosmic-answer-item {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(0, 216, 255, 0.05);
            animation: cosmicFadeIn 0.6s var(--transition-smooth) both;
        }

        .cosmic-answer-item:nth-child(1) { animation-delay: 0.2s; }
        .cosmic-answer-item:nth-child(2) { animation-delay: 0.3s; }
        .cosmic-answer-item:nth-child(3) { animation-delay: 0.4s; }
        .cosmic-answer-item:nth-child(4) { animation-delay: 0.5s; }

        .cosmic-answer-item p {
            margin-bottom: 0.5rem;
            color: var(--cosmic-text);
        }

        .cosmic-answer-item p strong {
            color: var(--cosmic-text);
            font-weight: 600;
        }

        .cosmic-correct {
            color: var(--cosmic-success);
        }

        .cosmic-incorrect {
            color: var(--cosmic-error);
        }

        /* Confetti Effect */
        .cosmic-confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background: var(--cosmic-light);
            opacity: 0;
            animation: cosmicConfetti 4s linear forwards;
            z-index: 1;
        }

        /* Loading Spinner */
        .cosmic-spinner {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            border: 5px solid rgba(0, 216, 255, 0.1);
            border-radius: 50%;
            border-top-color: var(--cosmic-light);
            animation: cosmicSpin 1s linear infinite;
            z-index: 1003;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .cosmic-title {
                font-size: 2.5rem;
            }
            
            .cosmic-tagline {
                font-size: 1.2rem;
            }
            
            .cosmic-card {
                padding: 2rem;
            }
            
            .cosmic-modal-content {
                padding: 2rem 1.5rem;
                width: 95%;
            }
            
            .cosmic-options-grid {
                grid-template-columns: 1fr;
            }
            
            .cosmic-question-container {
                padding: 2rem 1rem;
            }
            
            .cosmic-question {
                font-size: 1.3rem;
                padding: 1.2rem;
            }
            
            .cosmic-results-container {
                padding: 2rem 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .cosmic-title {
                font-size: 2rem;
            }
            
            .cosmic-header {
                padding: 3rem 1rem;
            }
            
            .cosmic-navigation {
                flex-direction: column;
                gap: 1rem;
            }
            
            .cosmic-btn {
                width: 100%;
            }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(0, 216, 255, 0.05);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--cosmic-primary);
            border-radius: 5px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--cosmic-primary-reverse);
        }
        :root {
            --primary-gradient: linear-gradient(90deg, #00d8ff, #008cff);
            --primary-gradient-reverse: linear-gradient(90deg, #008cff, #00d8ff);
            --primary-light: #00d8ff;
            --primary-dark: #008cff;
            --dark-bg: #0a0a0a;
            --darker-bg: #050505;
            --cosmic-text: rgba(255, 255, 255, 0.9);
            --cosmic-glow: 0 0 10px rgba(0, 216, 255, 0.7);
            
            /* Enhanced timing functions */
            --ease-elastic: cubic-bezier(0.68, -0.55, 0.265, 1.55);
            --ease-bounce: cubic-bezier(0.175, 0.885, 0.32, 1.275);
            --ease-power4: cubic-bezier(0.77, 0, 0.175, 1);
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Montserrat', 'Arial', sans-serif;
            background-color: var(--dark-bg);
            color: var(--cosmic-text);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow-x: hidden;
            background-image: 
                radial-gradient(circle at 20% 30%, rgba(0, 140, 255, 0.15) 0%, transparent 25%),
                radial-gradient(circle at 80% 70%, rgba(0, 216, 255, 0.15) 0%, transparent 25%);
        }
        
        .cosmic-title {
            font-size: 7rem;
            font-weight: 900;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-shadow: var(--cosmic-glow);
            position: relative;
            margin-bottom: 1.5rem;
            letter-spacing: -0.05em;
            line-height: 1;
            animation: 
                cosmicFloat 8s var(--ease-bounce) infinite alternate,
                cosmicPulse 4s ease-in-out infinite alternate,
                fadeIn 1.5s var(--ease-power4) forwards;
            opacity: 0;
            transform: translateY(30px);
            padding: 0 2rem;
            text-align: center;
        }
        
        .cosmic-title::before,
        .cosmic-title::after {
            content: '';
            position: absolute;
            top: 50%;
            width: 50vw;
            height: 4px;
            background: var(--primary-gradient);
            transform: scaleX(0);
            transform-origin: right;
            z-index: -1;
            filter: blur(4px);
            opacity: 0.7;
        }
        
        .cosmic-title::before {
