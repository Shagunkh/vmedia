        let currentQuiz = [];
let currentSubject = "";
let currentWeek = "";
let currentQuestionIndex = 0;
let userAnswers = [];
let timer;
let timeLeft;

function openSubjectModal(subject) {
    document.getElementById(`${subject}-modal`).classList.add('show');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.remove('show');
}

function startQuiz(subject, week) {
    // Show loading spinner
    document.getElementById('cosmic-spinner').style.display = 'block';
    
    setTimeout(() => {
        closeModal(`${subject}-modal`);
        
        // Load quiz data
        currentSubject = subject;
        currentWeek = week;
        
        if (week === 'full') {
            currentQuiz = [];
            const quizData = subject === 'forest' ? forestQuizzes : wildlifeQuizzes;
            for (let i = 1; i <= 12; i++) {
                if (quizData[`week${i}`]) {
                    currentQuiz = currentQuiz.concat(quizData[`week${i}`].questions);
                }
            }
            timeLeft = 90 * 60; // 1.5 hours
        } else {
            const quizData = subject === 'forest' ? forestQuizzes : wildlifeQuizzes;
            currentQuiz = quizData[`week${week}`]?.questions || [];
            timeLeft = 15 * 60; // 15 minutes
        }
        
        // Reset quiz state
        currentQuestionIndex = 0;
        userAnswers = Array(currentQuiz.length).fill(null);
        
        // Initialize quiz screen
        document.getElementById('quiz-screen').classList.add('show');
        const quizTitle = subject === 'forest' ? 'Forest Management' : 'Wildlife Ecology';
        const weekTitle = week === 'full' ? 'Full Course Challenge' : `Week ${week}`;
        document.querySelector('.cosmic-quiz-title').textContent = `${quizTitle} - ${weekTitle}`;
        
        // Start timer
        startTimer();
        
        // Load first question
        loadQuestion();
        
        // Hide spinner
        document.getElementById('cosmic-spinner').style.display = 'none';
    }, 500);
}

function startTimer() {
    clearInterval(timer);
    updateTimerDisplay();
    
    timer = setInterval(() => {
        timeLeft--;
        updateTimerDisplay();
        
        if (timeLeft <= 0) {
            clearInterval(timer);
            finishQuiz();
        }
    }, 1000);
}

function updateTimerDisplay() {
    const minutes = Math.floor(timeLeft / 60);
    const seconds = timeLeft % 60;
    document.querySelector('.cosmic-timer').textContent = 
        `Time remaining: ${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
}

function loadQuestion() {
    if (currentQuestionIndex >= currentQuiz.length) {
        finishQuiz();
        return;
    }
    
    const questionContainer = document.querySelector('.cosmic-question-container');
    const question = currentQuiz[currentQuestionIndex];
    
    // Update question number and text
    questionContainer.querySelector('.cosmic-question').textContent = 
        `${currentQuestionIndex + 1}. ${question.question}`;
    
    // Update options
    const optionsContainer = questionContainer.querySelector('.cosmic-options');
    optionsContainer.innerHTML = '';
    
    question.options.forEach((option, index) => {
        const optionElement = document.createElement('div');
        optionElement.className = 'cosmic-option-item';
        if (userAnswers[currentQuestionIndex] === index) {
            optionElement.classList.add('selected');
        }
        optionElement.textContent = `${String.fromCharCode(97 + index)}. ${option}`;
        optionElement.onclick = () => selectOption(optionElement, index);
        optionsContainer.appendChild(optionElement);
    });
    
    // Update navigation buttons
    const prevBtn = questionContainer.querySelector('.cosmic-btn-secondary');
    const nextBtn = questionContainer.querySelector('.cosmic-btn-primary');
    
    prevBtn.disabled = currentQuestionIndex === 0;
    nextBtn.textContent = currentQuestionIndex === currentQuiz.length - 1 ? 'Finish' : 'Next';
}

function selectOption(optionElement, optionIndex) {
    // Remove selected class from all options
    const options = document.querySelectorAll('.cosmic-option-item');
    options.forEach(opt => opt.classList.remove('selected'));
    
    // Add selected class to clicked option
    optionElement.classList.add('selected');
    
    // Save user's answer
    userAnswers[currentQuestionIndex] = optionIndex;
}

function prevQuestion() {
    if (currentQuestionIndex > 0) {
        currentQuestionIndex--;
        loadQuestion();
    }
}

function nextQuestion() {
    if (userAnswers[currentQuestionIndex] === null) {
        alert('Please select an answer before proceeding.');
        return;
    }
    
    if (currentQuestionIndex < currentQuiz.length - 1) {
        currentQuestionIndex++;
        loadQuestion();
    } else {
        finishQuiz();
    }
}
function abortQuiz() {
    if (confirm("Are you sure you want to abort this quiz? Your progress will be lost.")) {
        clearInterval(timer);
        document.getElementById('quiz-screen').classList.remove('show');
        document.getElementById('results-screen').classList.remove('show');
        
        // Exit fullscreen if in fullscreen mode
        if (document.exitFullscreen) {
            document.exitFullscreen();
        }
        
        // Show the main screen again
        document.querySelector('.cosmic-header').style.display = 'block';
        document.querySelector('.cosmic-subjects').style.display = 'grid';
    }
}
function finishQuiz() {
    clearInterval(timer);
    
    // Calculate score
    let correctAnswers = 0;
    currentQuiz.forEach((question, index) => {
        if (userAnswers[index] === question.answer) {
            correctAnswers++;
        }
    });
    
    const scorePercentage = Math.round((correctAnswers / currentQuiz.length) * 100);
    
    // Display results
    document.getElementById('quiz-screen').classList.remove('show');
    
    const resultsContainer = document.getElementById('results-screen');
    resultsContainer.querySelector('.cosmic-score').textContent = 
        `You scored ${correctAnswers}/${currentQuiz.length} (${scorePercentage}%)`;
    
    // Generate review
    const reviewContainer = resultsContainer.querySelector('.cosmic-review');
    reviewContainer.innerHTML = '<h3 class="cosmic-review-title">Review your answers:</h3>';
    
    currentQuiz.forEach((question, index) => {
        const answerItem = document.createElement('div');
        const isCorrect = userAnswers[index] === question.answer;
        
        answerItem.className = `cosmic-answer-item ${isCorrect ? 'cosmic-correct' : 'cosmic-incorrect'}`;
        
        const userAnswer = userAnswers[index] !== null ? 
            `${String.fromCharCode(97 + userAnswers[index])}. ${question.options[userAnswers[index]]}` : 
            'No answer selected';
            
        const correctAnswer = `${String.fromCharCode(97 + question.answer)}. ${question.options[question.answer]}`;
        
        answerItem.innerHTML = `
            <p><strong>Question ${index + 1}:</strong> ${question.question}</p>
            <p>Your answer: ${userAnswer} ${isCorrect ? '(Correct)' : '(Incorrect)'}</p>
            ${!isCorrect ? `<p>Correct answer: ${correctAnswer}</p>` : ''}
            <p>Explanation: ${question.explanation}</p>
        `;
        
        reviewContainer.appendChild(answerItem);
    });
    
    // Add confetti if score is good
    if (scorePercentage >= 80) {
        addConfetti();
    }
    
    resultsContainer.classList.add('show');
}

function addConfetti() {
    const colors = ['#00d8ff', '#008cff', '#4cffb0', '#ff4c6a', '#ffffff'];
    const container = document.querySelector('.cosmic-results-container');
    
    for (let i = 0; i < 100; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'cosmic-confetti';
        confetti.style.left = `${Math.random() * 100}%`;
        confetti.style.top = `-10px`;
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.animationDuration = `${Math.random() * 3 + 2}s`;
        confetti.style.animationDelay = `${Math.random() * 0.5}s`;
        container.appendChild(confetti);
        
        // Remove confetti after animation
        setTimeout(() => {
            confetti.remove();
        }, 5000);
    }
}

function closeResults() {
    document.getElementById('results-screen').classList.remove('show');
}

